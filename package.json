{
    "name": "mjv",
    "version": "1.1.0",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf dist && rimraf artifacts",
        "build:ts": "tsc",
        "build:assets": "copyfiles -u 1 src/**/*.{json,css,png,svg,ico,jpg} dist/ && copyfiles -u 1 src/monaco/** dist/ && copyfiles -u 1 src/icons/** dist/",
        "build": "npm run clean && npm run build:ts && npm run build:assets",
        "start": "npm run build && web-ext run --config=web-ext-config.mjs",
        "build:webext": "npm run build && web-ext build --config=web-ext-config.mjs"
    },
    "devDependencies": {
        "@types/firefox-webext-browser": "^120.0.4",
        "@types/requirejs": "^2.1.37",
        "typescript": "^5.6.2",
        "rimraf": "^5.0.10",
        "copyfiles": "^2.4.1",
        "web-ext": "^8.2.0"
    }
}